@model List<PurchaseOrder.Models.ParentModel>

<form method="post" asp-controller="Home" asp-action="Index">
    
    @{
        string? Name=null;
        string? Phone = null;
        string? Address = null;
    }

    <input type="text" name="Name" value="@Name" placeholder="Name" />
    <input type="text" name="Address" value="@Address" placeholder="Address" />
    <input type="tel" name="Phone" value="@Phone" placeholder="Phone" />

    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                var Instance = Model[i];
                <tr>
                    <td>@Instance.ProductName</td>
                    <td>@Instance.Price</td>
                    <td>
                        <input type="number" asp-for="@Instance.Quantity"  />

                        <input type="hidden" asp-for="@Instance.ProductId" value="@Instance.ProductId" />

                        <input type="hidden" asp-for="@Instance.Name" value="@Name" />
                        <input type="hidden" asp-for="@Instance.Address" value="@Address" />
                        <input type="hidden" asp-for="@Instance.Phone" value="@Phone" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit">Submit Order</button>
</form>


